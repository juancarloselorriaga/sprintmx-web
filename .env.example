# Database connection string for Neon/Postgres with Drizzle
DATABASE_URL="postgres://user:password@host:port/dbname"

# Better Auth - Secret for signing and encrypting tokens (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-replace-with-random-string"

# Google OAuth credentials for Better Auth
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Brevo (formerly SendinBlue) - Email service for transactional emails
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY="your-brevo-api-key"
BREVO_SENDER_EMAIL="noreply@yourdomain.com"
BREVO_SENDER_NAME="RungoMX"
# Comma-separated list of support email recipients for contact/feedback forms
BREVO_SUPPORT_RECIPIENTS="support@example.com"

# Mapbox - Get your access token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"
NEXT_PUBLIC_MAP_STYLE_LIGHT=https://api.mapbox.com/styles/v1/your-user/your-light-style-id?access_token=YOUR_MAPBOX_PUBLIC_TOKEN
NEXT_PUBLIC_MAP_STYLE_DARK=https://api.mapbox.com/styles/v1/your-user/your-dark-style-id?access_token=YOUR_MAPBOX_PUBLIC_TOKEN

# Optional: additional trusted origins for Better Auth (comma-separated, server-side only)
AUTH_ADDITIONAL_TRUSTED_ORIGINS=""

# Optional: additional protection for cron endpoints.
# If set, you can manually trigger cron routes by sending:
# Authorization: Bearer $CRON_SECRET
CRON_SECRET=""
