{
  "name": "rungomx-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --raw \"pnpm watch:i18n\" \"next dev\"",
    "dev:no-watch": "next dev",
    "build": "pnpm generate:i18n && next build",
    "start": "next start",
    "lint": "eslint",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "type-check": "pnpm generate:i18n && tsc --noEmit",
    "test": "jest",
    "test:db": "jest --selectProjects database",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "pnpm lint && pnpm generate:i18n && pnpm type-check && pnpm validate:locales && pnpm test",
    "shadcn": "pnpm dlx shadcn@latest",
    "validate:locales": "pnpm exec tsx scripts/validate-locales.ts",
    "generate:i18n": "pnpm generate:i18n-types && pnpm generate:i18n-loaders",
    "generate:i18n-types": "tsx scripts/generate-i18n-types.ts",
    "generate:i18n-loaders": "tsx scripts/generate-i18n-loaders.ts",
    "watch:i18n": "tsx scripts/watch-i18n.ts",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "messages/**/*.json": [
      "pnpm generate:i18n",
      "pnpm validate:locales"
    ]
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.20.5",
    "better-auth": "^1.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "lodash": "^4.17.21",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "next-intl": "^4.5.3",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-day-picker": "^9.11.3",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
